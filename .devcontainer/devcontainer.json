{
  "name": "node + mongo + neo4j + redis",
  "dockerComposeFile": "docker-compose.yml",
  "service": "app",
  "workspaceFolder": "/workspaces/${localWorkspaceFolderBasename}",
  "customizations": {
    "vscode": {
      "extensions": [
        "dbaeumer.vscode-eslint",
        "esbenp.prettier-vscode",
        "ms-azuretools.vscode-docker",
        "mongodb.mongodb-vscode"
      ]
    }
  },
  "forwardPorts": [3000, 27017, 7474, 7687, 6379],
  "portsAttributes": {
    "3000": { "label": "Node app" },
    "27017": { "label": "MongoDB" },
    "7474": { "label": "Neo4j HTTP" },
    "7687": { "label": "Neo4j Bolt" },
    "6379": { "label": "Redis" }
  },
  "remoteEnv": {
    "MONGO_URL": "mongodb://root:example@mongo:27017/?authSource=admin",
    "NEO4J_URI": "bolt://neo4j:7687",
    "NEO4J_USERNAME": "neo4j",
    "NEO4J_PASSWORD": "devpassword",
    "REDIS_URL": "redis://redis:6379"
  },
  "postCreateCommand": "bash -lc 'if [ -f pnpm-lock.yaml ]; then corepack enable && pnpm i; elif [ -f yarn.lock ]; then corepack enable && yarn; else npm i; fi'",
  "runServices": ["mongo", "neo4j", "redis", "app"],
  "overrideCommand": false
}

